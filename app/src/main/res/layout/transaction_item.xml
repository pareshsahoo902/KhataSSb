<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_background"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:elevation="11dp"
    android:layout_marginRight="7dp">

    <LinearLayout
        android:id="@+id/linarl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            >
            <TextView
                android:id="@+id/itemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomato: 23*4 = 1234\nCabage: 4*20 = 800"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/amountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: 2034"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_slab"
                android:layout_below="@+id/itemText"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle number 3232904"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_slab"
                android:layout_below="@+id/amountText"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/billIMage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_below="@+id/descriptionText"
                android:layout_marginTop="7dp"
                android:src="@color/colorAccent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                />


        </RelativeLayout>
        <FrameLayout
            android:id="@+id/giveFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@color/litered"
            >
            <TextView
                android:id="@+id/gaveText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:text="200"
                />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/gotFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            >
            <TextView
                android:id="@+id/gotText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_gravity="center"
                android:textColor="@android:color/holo_green_dark"
                android:text="300"
                />

        </FrameLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/9/2021 9:50AM"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/roboto_slab"
        android:layout_below="@+id/linarl"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        />


    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: 2034+345 = 2379 "
        android:textSize="14dp"
        android:layout_below="@id/linarl"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/roboto_slab"
        android:layout_marginRight="5dp"
        android:background="@color/disabledColor"
        android:padding="3dp"
        android:layout_marginBottom="7dp"
        />


</RelativeLayout>