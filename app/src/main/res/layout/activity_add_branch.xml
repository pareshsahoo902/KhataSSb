<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.AddBranchActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/fontregular"
        android:textColor="@color/subHeadingTextColor"
        android:layout_above="@+id/passcode"
        android:textSize="14dp"
        android:layout_marginBottom="70dp"
        android:text="Please enter a branch name to start your khata and continue with your entries!"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passcode"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_above="@+id/addBtn"
        android:textColorHint="@color/colorPrimaryDark"
        app:boxStrokeColor="@color/colorPrimaryDark"
        app:boxStrokeWidth="1dp"
        app:passwordToggleTint="@color/colorPrimaryDark">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/branchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Branch name"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/headingTextColor"
            android:textSize="18dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/fontmedium"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:textSize="18dp"
        android:text="Add" />

</RelativeLayout>