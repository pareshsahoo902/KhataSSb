<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cust_calc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorAccent"
    android:padding="7dp"
    android:layout_gravity="bottom"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="7dp"
            android:text="C"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/white"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="7"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="4"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="1"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="0"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"

        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="7dp"
            android:text="M+"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="8"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="5"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="2"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="."
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"

        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="7dp"
            android:text="M-"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="9"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="6"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="3"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:text="="
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/subHeadingTextColor"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"

        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="⌫"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="7dp"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="×"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="7dp"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="÷"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="7dp"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="7dp"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="7dp"
            android:textSize="17dp"
            android:fontFamily="@font/fontmedium"
            android:textColor="@color/white"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>