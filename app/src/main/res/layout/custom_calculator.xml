<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cust_calc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:padding="7dp"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="7"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn4"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="4"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"

            android:fontFamily="@font/fontmedium"
            android:text="1"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="0"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"

        android:weightSum="4">

        <Button
            android:id="@+id/btnMPlus"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="M+"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn8"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="8"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="5"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="2"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"

            android:text="."
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="5dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btnMminus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="7dp"
            android:visibility="invisible"
            android:fontFamily="@font/fontmedium"
            android:text="M-"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"

            android:text="9"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"

            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="6"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"

            android:fontFamily="@font/fontmedium"
            android:text="3"
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="="
            android:textColor="@color/subHeadingTextColor"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="5dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="7dp"

            android:fontFamily="@font/fontmedium"
            android:text="⌫"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="×"
            android:textColor="@color/white"

            android:textSize="17dp" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"
            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"

            android:text="÷"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"

            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimaryDark"

            android:elevation="7dp"
            android:fontFamily="@font/fontmedium"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>

</LinearLayout>