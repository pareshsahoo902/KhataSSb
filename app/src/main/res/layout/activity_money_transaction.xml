<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionPage.MoneyTransaction">


    <include layout="@layout/toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/geta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="20dp"
            android:text="You will get  : ₹  0"
            android:textColor="@color/primaryGreen"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/getPdf"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="20dp"
            android:src="@drawable/pdf"
            android:tint="@color/colorPrimary" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/statusbar"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:weightSum="1"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="0.25"
            android:paddingLeft="10dp"
            android:text="ENTRIES"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.35"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="YOU GAVE"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="YOU GOT"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/entryRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table"
        android:layout_marginTop="10dp"
        app:reverseLayout="true"
        android:layout_marginBottom="70dp"
        android:background="@android:color/transparent"
        tools:listitem="@layout/transaction_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/gavebtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/primaryRed"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="YOU GAVE ₹"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/getbtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/primaryGreen"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:text="YOU GOT ₹"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>