<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="7dp"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBackground"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:elevation="10dp">

            <ImageView
                android:id="@+id/staff_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/offerSubTitle"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/staffNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/cardBackground"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/headingTextColor"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/staffDateOfJoining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cardBackground"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:layout_below="@+id/staffNameTitle"
            android:textColor="@color/headingTextColor"
            android:textSize="13dp"
             />

        <TextView
            android:id="@+id/staffSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cardBackground"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:layout_below="@+id/staffDateOfJoining"
            android:textColor="@color/headingTextColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/viewStaffdetails"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:text="View Details"
            style="@style/appButtonStyle"
            android:layout_below="@+id/cardBackground"
            android:paddingLeft="10dp"
             />


    </RelativeLayout>

</androidx.cardview.widget.CardView>